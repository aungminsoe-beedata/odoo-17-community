<odoo>
    <!-- Wizard Form View -->
    <record id="view_purchase_order_refuse_wizard_form" model="ir.ui.view">
        <field name="name">purchase.order.refuse.wizard.form</field>
        <field name="model">purchase.order.refuse.wizard</field>
        <field name="arch" type="xml">
            <form>
                <header class="oe_title">
                    <h1 style="color: #f48648; font-size: 24px;">Refusal Reason</h1>
                </header>
                <sheet>
                    <group>
                        <field name="refuse_reason" placeholder="Enter the reason for refusal" />
                    </group>
                </sheet>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm_refusal" class="btn-primary" style="background-color: #f48648; border-color: #f48648;"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
